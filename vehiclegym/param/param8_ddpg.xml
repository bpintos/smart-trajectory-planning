<?xml version="1.0"?>
<param>
    <Environment>
    	<vehicle>diff_robot</vehicle>
        <env_name>env_continuous</env_name>
        <version>v5</version>
        <only_simulation>False</only_simulation>
        <goal>[(-4,4),(-4,4),(4,-4),(-4,-4)]</goal> <!-- [(-4,4),(-4,4),(4,-4),(-4,-4)] -->
        <description>Room with obstacles. Robot with 180 laser rays</description>
    </Environment>
    <DDPG>
        <total_episodes>1000</total_episodes>
        <gamma>0.9</gamma>
        <tau>1</tau>
        <std_dev>0.8</std_dev> <!-- 0.8 -->
        <std_dev_decay>0.99</std_dev_decay>
        <buffer_capacity>50000</buffer_capacity>
        <batch_size>64</batch_size>
        <critic_lr>0.0005</critic_lr>
        <actor_lr>0.00001</actor_lr>
        <actor_hidden_layers>(500,500,500)</actor_hidden_layers>
        <critic_hidden_layers>(500,500,500,500)</critic_hidden_layers>
        <weights_input>14_room_laser180_obstacles_safety_legal_comfort_destination_stop</weights_input>
        <weights_available>False</weights_available>
        <weights_output>14_room_laser180_obstacles_safety_legal_comfort_destination_stop</weights_output>
    </DDPG>
    <Robot>
        <number_proximity>16</number_proximity>
        <number_laser>1</number_laser>
        <number_IMU>4</number_IMU>
        <number_GPS>3</number_GPS>
        <number_laser_rays>180</number_laser_rays>
        <laser_range>5</laser_range>
        <wheelBase>0.331</wheelBase>
        <wheelRadius>0.0975</wheelRadius>
        <robotLinearVelocity>0.2</robotLinearVelocity>
        <robotMaxLinearVelocity>1</robotMaxLinearVelocity>
        <robotMaxAngularVelocity>0.5</robotMaxAngularVelocity>
        <min_distance2robot>0.30</min_distance2robot>
    </Robot>
    <Coppelia>
        <scene>Pionner_room_obstacles.ttt</scene>
        <coppelia_GUI>True</coppelia_GUI>
    </Coppelia>
</param>
